          center/contain no-repeat;
        transition: var(--transition-ease);
        --icon-size: #{rem(30)};

        @include media("sm") {
          --icon-size: #{rem(32)};
        }
      }

      &[data-state="opened"] {
        .icon {
          transform: rotate(180deg);
        }
      }
    }

    &__body {
      max-height: 0;
      transition: max-height var(--transition-bezier);
      overflow: hidden;
    }

    &__content {
      padding: rem(20) 0;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: rem(20);

      ul {
        padding-left: 24px;
        list-style-type: disc;
      }

      p {
        max-width: rem(1135);
      }
    }
  }
