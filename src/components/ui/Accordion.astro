  .accordion {
    width: 100%;

    &__header {
      position: relative;
      width: 100%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: flex-start;
      gap: rem(12);

      @include media("lg") {
        justify-content: space-between;
      }

      &-title {
        color: var(--primary);
        font-size: rem(20);
        font-weight: 500;

        @include media("sm") {
          font-size: rem(18);
        }
      }

