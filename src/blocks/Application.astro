---
import { Section, H2, H3, P, Image, Icon, Button } from "ui";
import TheForm from "@/components/TheForm.astro";

interface Props {
  fixed?: boolean;
}
---

<!-- Application -->
<Section name={"application" + (Astro.props.fixed ? " fixed" : "")}>
  <TheForm />
</Section>

<style lang="scss" is:global>
  @use "scss/helpers" as *;

  .application {
    padding-bottom: 0 !important;

    .container {
      position: relative;
    }

    @include media("1025px", min-width) {
      &.fixed {
        .form {
          position: absolute;
          bottom: 0;
          left: 0;
          z-index: 2;
        }
      }
    }
    @include media("lg") {
      padding-top: 0 !important;
      background: #32383f url("/assets/img/form-bg.png") center/cover no-repeat;
    }
  }
</style>
