---
import { Section, H2, H3, P, Image, Icon, Button } from "ui";
---

<!-- Contacts -->
<Section name="contacts">
  <div class="contacts__text">
    <ul class="contacts__text-list">
      <li>
        <Icon src="location.svg" />
        <span>Чувашская Республика, г.Чебоксары, ул. И. Яковлева, д. 35</span>
      </li>
      <li>
        <Icon src="mobile.svg" />
        <a href="tel:+79003330072" title="Телефон" target="_blank">
          +7 (900) 333-00-72
        </a>
      </li>
      <li>
        <Icon src="mobile.svg" />
        <a href="tel:+7835209663" title="Телефон" target="_blank">
          +7 (8352) 709-663
        </a>
      </li>
      <li>
